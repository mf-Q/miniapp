 <div class="container">
<div class="item">
<h3>Log in</h3>
<hr>
<div style="margin: 20px auto">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <p class="box"><%= f.email_field :email, autofocus: true, placeholder:"email", style: 'width: 60%; height: 30px; border: none;'%></p>

  <p class="box"><%= f.password_field :password, placeholder:"パスワード", style: 'width: 60%; height: 30px; border: none;'%></p>

   <% if devise_mapping.rememberable? %>
  
   <p class="box"><%= f.check_box :remember_me %>
   <span><%= f.label :remember_me %></span>
   </p>
  <% end %>

<p class="box"><%= f.submit "Log in" %></p>
<% end %>

<%= render "devise/shared/links" %>
