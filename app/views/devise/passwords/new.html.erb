<div class="container">
<div class="item">
<h3>パスワードをお忘れですか?</h3>
<hr>
<div style="margin: 20px auto">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>

 <p class="box">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"email", style: 'width: 60%; height: 30px; border: none;' %>
  </p>

  <div class="actions">
 <p class="box"><%= f.submit "Send me reset password instructions" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
